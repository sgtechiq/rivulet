APP_NAME=Rivulet
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:your_random_32_byte_key_here
APP_URL=https://yourdomain.com

DB_CONNECTION=default
DB_DRIVER=mysql
DB_HOST=your_prod_db_host
DB_PORT=3306
DB_DATABASE=your_prod_db_name
DB_USERNAME=your_prod_db_user
DB_PASSWORD=your_prod_db_pass

LOG_CHANNEL=file
LOG_LEVEL=error

CACHE_DRIVER=file

QUEUE_CONNECTION=redis

REDIS_HOST=your_redis_host
REDIS_PASSWORD=your_redis_pass
REDIS_PORT=6379
REDIS_QUEUE=default

MAIL_MAILER=smtp
MAIL_HOST=your_smtp_host
MAIL_PORT=587
MAIL_USERNAME=your_smtp_user
MAIL_PASSWORD=your_smtp_pass
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your@domain.com
MAIL_FROM_NAME="Rivulet App"

NOTIFICATION_FIREBASE_API_KEY=your_firebase_key
NOTIFICATION_PUSHER_APP_ID=your_pusher_id
NOTIFICATION_PUSHER_APP_KEY=your_pusher_key
NOTIFICATION_PUSHER_APP_SECRET=your_pusher_secret
NOTIFICATION_PUSHER_CLUSTER=your_pusher_cluster
NOTIFICATION_SLACK_WEBHOOK=your_slack_webhook
NOTIFICATION_WHATSAPP_API_KEY=your_whatsapp_key
NOTIFICATION_SMS_PROVIDER=twilio
NOTIFICATION_SMS_ACCOUNT_SID=your_twilio_sid
NOTIFICATION_SMS_AUTH_TOKEN=your_twilio_token
NOTIFICATION_SMS_FROM=your_twilio_from

AUTH_TOKEN_EXPIRY=3600

GOOGLE_MAPS_API_KEY=your_google_maps_key  # For geocoder

# Session/Cookie defaults (secure in prod)
SESSION_DRIVER=file
COOKIE_PREFIX=rivulet_